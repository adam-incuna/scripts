[user]
	email = adamthomas@e3d-online.com
	name = Adam Thomas

[core]
  editor = nano
  excludesfile = ~/.gitignore
  whitespace = blank-at-eol,cr-at-eol,tabwidth=4,tab-in-indent,space-before-tab
  pager = less

[alias]
  a = add
  aa = !git add -A && git ss
  ap = add -p
  amend = commit --amend -v
  b = branch
  c = commit -v
  cm = commit -m
  co = checkout
  cob = checkout -b
  cv = commit -v
  d = diff
  dc = diff --cached
  df = diff --function-context
  ds = !git diff && git status
  dw = diff --color-words
  in = !git fetch && git log ..origin/master
  ld = log ORIG_HEAD.. --stat --no-merges
  lol = log --graph --decorate --pretty=oneline --abbrev-commit
  lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
  ls = ls-files
  pl = pull
  pp = !git pull && git push
  pr = pull-request -i
  ps = push
  s = status
  ss = status -s
  writers = shortlog -sn
  who = shortlog -n -s --no-merges

[color]
  branch = auto
  diff = auto
  status = auto
  ui = true

[status]
  relativePaths = true

[push]
  default = current
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[submodule]
	recurse = false
